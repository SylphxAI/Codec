{
	"name": "@sylphx/codec-core",
	"version": "1.0.0",
	"type": "module",
	"description": "Core types and utilities for @sylphx/codec",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"bun": "./src/index.ts",
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": ["dist"],
	"scripts": {
		"build": "bun build ./src/index.ts --outdir ./dist --target browser && bun run build:types",
		"build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
		"test": "bun test"
	},
	"devDependencies": {
		"typescript": "^5.7.2"
	},
	"keywords": ["codec", "media", "types", "typescript"],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/SylphxAI/codec.git",
		"directory": "packages/core"
	},
	"publishConfig": {
		"access": "public"
	}
}
